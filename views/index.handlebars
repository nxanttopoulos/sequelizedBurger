<div class="container">
  <div class="row">
    <img class="center-block"src="assets/img/Burger.png" style="max-height: 200px; width: 200px">
  </div>
  <div class="col-xs-12 text-center">
    <h2>Eat-Da-Burger</h2>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
    <p>Enter a burger you want to eat Click the "Submit" button</p>
    <br>
    <form action="/" method="POST">
      <input type="textarea" name="name" id="burgerType">
      <button type="submit" class="btn btn-primary">Submit</button>     
    </form>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="col-xs-6 text-center" class="task">
    <div class="row">
      {{#each burgers}}
        {{#unless this.devoured}}
      <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
      </div>
    <div class="col-xs-3 text-center">
      <form action="/{{this.burger_name}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
        <button type="submit"class="btn btn-default">Devour!</button>
      </form>
    </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>
  <div class="col-xs-6 text-center" class="task">
    {{#each burgers}}
      {{#if this.devoured}}
        <pre>{{this.id}}. {{this.burger_name}}</pre>
        <form action="/{{this.burger_name}}?_method=PUT" method="POST">
          <button type="submit"class="btn btn-default">Un-Devour!?</button>
          <input type="hidden" name="devoured" value="false">
        </form>
      {{/if}}
    {{/each}}
  </div>
</div>